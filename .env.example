# Frontend environment variables (Vite)
# Copy to .env and fill in values (do NOT commit secrets)

# API base URL for frontend to call backend
# Example for Amplify behind same domain via reverse proxy
# VITE_API_BASE_URL=/api/v1
# Or external API Gateway / EB URL
# VITE_API_BASE_URL=https://api.your-domain.com/api/v1

# Cognito (OIDC) configuration
VITE_COGNITO_AUTHORITY=https://cognito-idp.<region>.amazonaws.com/<user-pool-id>
VITE_COGNITO_CLIENT_ID=<app-client-id>
# If omitted, defaults to `${window.location.origin}/auth/callback`
VITE_COGNITO_REDIRECT_URI=https://<your-amplify-domain-or-custom-domain>/auth/callback
VITE_COGNITO_SCOPE=phone openid email profile

# Cognito (Lightweight SDK helpers for signup/confirm/forgot flows)
# Used by src/services/cognito.ts in the browser (no AWS credentials needed)
VITE_COGNITO_REGION=<region>                 # e.g., ap-south-1
VITE_COGNITO_APP_CLIENT_ID=<app-client-id>   # e.g., same as VITE_COGNITO_CLIENT_ID
