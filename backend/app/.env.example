# Environment
ENVIRONMENT=development

# API Configuration
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS Cognito
AWS_COGNITO_USER_POOL_ID=your-cognito-user-pool-id
AWS_COGNITO_APP_CLIENT_ID=your-cognito-app-client-id

# AWS SES/SNS for Email/SMS Verification
AWS_SES_SENDER_EMAIL=no-reply@sparclaunchpad.org

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# Microsoft OAuth
MS_CLIENT_ID=your-microsoft-client-id
MS_CLIENT_SECRET=your-microsoft-client-secret
MS_REDIRECT_URI=http://localhost:5173/auth/microsoft/callback
MS_TENANT=common

# Development Settings
MOCK_VERIFICATION=true
DEV_AUTH=true